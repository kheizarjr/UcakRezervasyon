@model IEnumerable<UcakRezervasyon.ViewModels.GuzergahViewModel>

@{
    ViewData["Title"] = "Güzergah Listesi";
}

<div class="container my-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Yeni Uçuş Oluştur</a>
    </div>

    <div class="card">
        <div class="card-header">
            Mevcut Güzergahlar
        </div>
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.GuzergahName)</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.GuzergahName)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.GuzergahId" class="btn btn-sm btn-secondary">Düzenle</a>
                            <a asp-action="Details" asp-route-id="@item.GuzergahId" class="btn btn-sm btn-info">Detaylar</a>
                            <a asp-action="Delete" asp-route-id="@item.GuzergahId" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <h2 class="mt-5">Güzergah Seçimi</h2>
    <ul class="list-group">
        @foreach (var guzergah in Model)
        {
            <li class="list-group-item">
                <a asp-action="Index" asp-controller="Ucus" asp-route-guzergahId="@guzergah.GuzergahId">
                    @guzergah.GuzergahName
                </a>
            </li>
        }
    </ul>
</div>
